<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ly_top"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintBottom_toTopOf="@id/ly_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tomato"
            android:gravity="center"
            android:text="No Status"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_left"
        android:layout_width="451dp"
        android:layout_height="601dp"
        app:layout_constraintBottom_toTopOf="@id/ly_bottom"
        app:layout_constraintEnd_toStartOf="@id/ly_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_top">

        <GridLayout
            android:id="@+id/grid_maze"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_right"
        android:layout_width="150dp"
        android:layout_height="796dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ly_left"
        app:layout_constraintTop_toBottomOf="@+id/ly_top">

        <!--TODO: REMOVABLE LY_TILT: VISIBILITY-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/ly_tilt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:padding="5dp">

            <TextView
                android:id="@+id/tilt_lbl_header"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:gravity="bottom|center_horizontal"
                android:text="Accelerometer"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/tilt_swt_isoff"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tilt_lbl_header"
                android:switchTextAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@color/dim_gray"
                android:textStyle="bold"
                android:checked="true"
                android:theme="@style/SwitchStyle" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_time"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_below="@+id/ly_tilt"
            android:padding="5dp">

            <TextView
                android:id="@+id/time_lbl_header"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:gravity="bottom|center_horizontal"
                android:text="Timings"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/time_lbl_explore"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/time_lbl_header"
                android:text="Exploration Time:"
                android:textColor="@color/dim_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_txt_explore"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/time_lbl_explore"
                android:text="0:00:000" />

            <TextView
                android:id="@+id/time_lbl_fast"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/time_txt_explore"
                android:text="Fastest Path Time:"
                android:textColor="@color/dim_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_txt_fast"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/time_lbl_fast"
                android:text="0:00:000" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/time_swt_isfast"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/time_btn_stopwatch"
                android:switchTextAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@color/dim_gray"
                android:textStyle="bold"
                android:theme="@style/SwitchStyle" />

            <Button
                android:id="@+id/time_btn_stopwatch"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Start"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textSize="14sp" />

            <Button
                android:id="@+id/time_btn_reset"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="Reset"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_point"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/ly_time"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="5dp">

            <TextView
                android:id="@+id/point_lbl_header"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:gravity="bottom|center_horizontal"
                android:text="Set Points"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/point_lbl_x"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/point_lbl_header"
                android:gravity="bottom"
                android:text="X:" />

            <EditText
                android:id="@+id/point_txt_x"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_below="@id/point_lbl_header"
                android:layout_toEndOf="@+id/point_lbl_x"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/point_lbl_y"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/point_lbl_header"
                android:layout_toStartOf="@+id/point_txt_y"
                android:gravity="bottom"
                android:text="Y:" />

            <EditText
                android:id="@+id/point_txt_y"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/point_lbl_header"
                android:gravity="bottom"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center"
                android:textSize="14sp" />

            <Button
                android:id="@+id/point_btn_origin"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Origin"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textSize="14sp" />

            <Button
                android:id="@+id/point_btn_way"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="Way"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_config"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/ly_point"
            android:padding="5dp">

            <TextView
                android:id="@+id/config_lbl_header"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:gravity="bottom|center_horizontal"
                android:text="Configurations"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/config_btn_f1"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/config_lbl_header"
                android:text="F1"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textSize="14sp" />

            <Button
                android:id="@+id/config_btn_f2"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/config_lbl_header"
                android:text="F2"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textSize="14sp" />

            <Button
                android:id="@+id/config_btn_reconfig"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Reconfigure"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_display"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/ly_config"
            android:padding="5dp">

            <TextView
                android:id="@+id/display_lbl_header"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:gravity="bottom|center_horizontal"
                android:text="Display"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/display_swt_ismanual"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/display_lbl_header"
                android:switchTextAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@color/dim_gray"
                android:textStyle="bold"
                android:theme="@style/SwitchStyle" />

            <Button
                android:id="@+id/display_btn_update"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Update"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textSize="14sp"
                android:visibility="invisible" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_bottom"
        android:layout_width="451dp"
        android:layout_height="196dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ly_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_left">

        <GridLayout
            android:id="@+id/grid_direction"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/d_box"
            android:columnCount="3"
            android:rowCount="3">

            <Button
                android:id="@+id/direction_btn_up"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="0"
                android:width="50dp"
                android:height="50dp"
                android:background="@drawable/d_arrow"
                android:rotation="0"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            <Button
                android:id="@+id/direction_btn_down"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="2"
                android:width="50dp"
                android:height="50dp"
                android:background="@drawable/d_arrow"
                android:rotation="180"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            <Button
                android:id="@+id/direction_btn_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="1"
                android:width="50dp"
                android:height="50dp"
                android:background="@drawable/d_arrow"
                android:rotation="270"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            <Button
                android:id="@+id/direction_btn_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="2"
                android:layout_row="1"
                android:width="50dp"
                android:height="50dp"
                android:background="@drawable/d_arrow"
                android:rotation="90"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

        </GridLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>