<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tomato"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="No Status"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="451dp"
        android:layout_height="601dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_right"
        app:layout_constraintTop_toBottomOf="@id/layout_status"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom">
        <GridLayout
            android:id="@+id/grid_maze"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_right"
        android:layout_width="150dp"
        android:layout_height="601dp"
        app:layout_constraintStart_toEndOf="@id/layout_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_status"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom">
        <RelativeLayout
            android:id="@+id/layout_timing"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/d_box">

            <TextView
                android:id="@+id/lbl_timeexplore"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:text="Exploration Time:" />
            <TextView
                android:id="@+id/txt_timeexplore"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/lbl_timeexplore"
                android:text="txt_timeexplore" />
            <TextView
                android:id="@+id/lbl_timefast"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:layout_below="@+id/txt_timeexplore"
                android:text="Fastest Path Time:" />
            <TextView
                android:id="@+id/txt_timefast"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/lbl_timefast"
                android:text="txt_timefast" />
            <Switch
                android:id="@+id/swt_isfast"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/btn_timer"
                android:onClick="toggle_timer"
                android:text="Explore"
                android:switchTextAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
            <Button
                android:id="@+id/btn_timer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/btn_reset"
                android:onClick="onclick_timer"
                android:text="Start Timer"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:onClick="onclick_reset"
                android:text="Reset Time"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_setpoint"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/layout_timing"
            android:background="@drawable/d_box"></LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_left"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/d_box">
        <GridLayout
            android:id="@+id/grid_direction"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:columnCount="3"
            android:rowCount="3"
            android:background="@drawable/d_box">
            <Button
                android:id="@+id/btn_up"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="0"
                android:width="50dp"
                android:height="50dp"
                android:background="@drawable/d_arrow" android:rotation="0"
                android:onClick="direction_click"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
            <Button
                android:id="@+id/btn_down"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="2"
                android:width="50dp"
                android:height="50dp"
                android:background="@drawable/d_arrow" android:rotation="180"
                android:onClick="direction_click"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
            <Button
                android:id="@+id/btn_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="1"
                android:width="50dp"
                android:height="50dp"
                android:background="@drawable/d_arrow" android:rotation="270"
                android:onClick="direction_click"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
            <Button
                android:id="@+id/btn_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="2"
                android:layout_row="1"
                android:width="50dp"
                android:height="50dp"
                android:background="@drawable/d_arrow" android:rotation="90"
                android:onClick="direction_click"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
        </GridLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>