<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ly_top"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintBottom_toTopOf="@id/ly_left"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tomato"
            android:gravity="center"
            android:text="No Status"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_left"
        android:layout_width="451dp"
        android:layout_height="601dp"
        app:layout_constraintBottom_toTopOf="@id/ly_bottom"
        app:layout_constraintEnd_toStartOf="@id/ly_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_top">

        <GridLayout
            android:id="@+id/grid_maze"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_right"
        android:layout_width="150dp"
        android:layout_height="796dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ly_left"
        app:layout_constraintTop_toBottomOf="@+id/ly_top">

        <RelativeLayout
            android:id="@+id/ly_bt"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/bt_lbl_header"
                style="@style/HeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:text="Bluetooth" />

            <TextView
                android:id="@+id/bt_lbl_connected"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/bt_lbl_header"
                android:text="Connected to:"
                android:textColor="@color/dim_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bt_txt_connected"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/bt_lbl_connected" />

        </RelativeLayout>

        <!--TODO: REMOVABLE LY_TILT: VISIBILITY-->
        <RelativeLayout
            android:id="@+id/ly_tilt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/ly_bt"
            android:visibility="gone">

            <TextView
                android:id="@+id/tilt_lbl_header"
                style="@style/HeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:text="Accelerometer" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/tilt_swt_isoff"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tilt_lbl_header"
                android:checked="true"
                android:textColor="@color/dim_gray"
                android:theme="@style/SwitchStyle" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_time"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@id/ly_tilt">

            <TextView
                android:id="@+id/time_lbl_header"
                style="@style/HeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:text="Timings" />

            <TextView
                android:id="@+id/time_lbl_explore"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/time_lbl_header"
                android:text="Exploration Time:"
                android:textColor="@color/dim_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_txt_explore"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/time_lbl_explore" />

            <TextView
                android:id="@+id/time_lbl_fast"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/time_txt_explore"
                android:text="Fastest Path Time:"
                android:textColor="@color/dim_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_txt_fast"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/time_lbl_fast" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/time_swt_isfast"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/time_btn_stopwatch"
                android:textColor="@color/dim_gray"
                android:theme="@style/SwitchStyle" />

            <Button
                android:id="@+id/time_btn_stopwatch"
                style="@style/ButtonStyle"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Start" />

            <Button
                android:id="@+id/time_btn_reset"
                style="@style/ButtonStyle"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="Reset" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_point"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@id/ly_time"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/point_lbl_header"
                style="@style/HeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:text="Set Points" />

            <TextView
                android:id="@+id/point_lbl_x"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/point_lbl_header"
                android:gravity="bottom"
                android:text="X:" />

            <EditText
                android:id="@+id/point_txt_x"
                style="@style/EditTextStyle"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_below="@id/point_lbl_header"
                android:layout_toEndOf="@+id/point_lbl_x" />

            <TextView
                android:id="@+id/point_lbl_y"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/point_lbl_header"
                android:layout_toStartOf="@+id/point_txt_y"
                android:gravity="bottom"
                android:text="Y:" />

            <EditText
                android:id="@+id/point_txt_y"
                style="@style/EditTextStyle"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/point_lbl_header" />

            <Button
                android:id="@+id/point_btn_origin"
                style="@style/ButtonStyle"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Origin" />

            <Button
                android:id="@+id/point_btn_way"
                style="@style/ButtonStyle"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="Way" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_display"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@id/ly_point">

            <TextView
                android:id="@+id/display_lbl_header"
                style="@style/HeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:text="Display" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/display_swt_ismanual"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/display_lbl_header"
                android:textColor="@color/dim_gray"
                android:theme="@style/SwitchStyle" />

            <Button
                android:id="@+id/display_btn_update"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:text="Update" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_config"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_below="@id/ly_display">

            <TextView
                android:id="@+id/config_lbl_header"
                style="@style/HeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:text="Configurations" />

            <GridLayout
                android:id="@+id/config_grid_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/config_lbl_header"
                android:background="@drawable/d_box" />

            <Button
                android:id="@+id/config_btn_reconfig"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/config_grid_btn"
                android:text="Reconfigure" />

            <!--<Button-->
            <!--android:id="@+id/config_btn_f1"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_below="@id/config_lbl_header"-->
            <!--android:text="F1"-->
            <!--android:textAllCaps="true"-->
            <!--android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"-->
            <!--android:textSize="14sp" />-->

            <!--<Button-->
            <!--android:id="@+id/config_btn_f2"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_below="@id/config_lbl_header"-->
            <!--android:text="F2"-->
            <!--android:textAllCaps="true"-->
            <!--android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"-->
            <!--android:textSize="14sp" />-->
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_bottom"
        android:layout_width="451dp"
        android:layout_height="196dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ly_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_left">

        <GridLayout
            android:id="@+id/grid_direction"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/d_box"
            android:columnCount="3"
            android:rowCount="3">

            <Button
                android:id="@+id/direction_btn_up"
                style="@style/DirectionStyle"
                android:layout_column="1"
                android:layout_row="0"
                android:rotation="0" />

            <Button
                android:id="@+id/direction_btn_down"
                style="@style/DirectionStyle"
                android:layout_column="1"
                android:layout_row="2"
                android:rotation="180" />

            <Button
                android:id="@+id/direction_btn_left"
                style="@style/DirectionStyle"
                android:layout_column="0"
                android:layout_row="1"
                android:rotation="270" />

            <Button
                android:id="@+id/direction_btn_right"
                style="@style/DirectionStyle"
                android:layout_column="2"
                android:layout_row="1"
                android:rotation="90" />

        </GridLayout>

        <Button
            android:id="@+id/message_btn_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Message" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>