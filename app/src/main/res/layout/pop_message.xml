<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingEnd="14dp"
    android:paddingStart="14dp">

    <TextView
        android:id="@+id/msg_lbl_header"
        style="@style/HeaderStyle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/msg_header" />

    <ListView
        android:id="@+id/msg_lv_chat"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/d_box"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/write_txt_msg"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/write_btn_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/d_clear"
            android:visibility="gone" />

        <Button
            android:id="@+id/write_btn_send"
            style="@style/ButtonStyle"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="@string/msg_send" />

    </LinearLayout>

</LinearLayout>